# MongoDB Atlas
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/h200_production?retryWrites=true&w=majority

# RunPod Configuration
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_SERVERLESS_ENDPOINT_ID=your_endpoint_id
RUNPOD_TIMED_POD_ID=your_pod_id
RUNPOD_NETWORK_VOLUME_ID=your_volume_id

# Cloudflare R2 Configuration (REPLACES ALL S3 REFERENCES)
R2_ENDPOINT_URL=https://account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=h200-backup

# Redis Configuration
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# Google Cloud
GCP_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcp-key.json

# Docker Configuration
DOCKER_USERNAME=your_docker_username
DOCKER_BUILD_CLOUD_TOKEN=your_build_cloud_token

# OpenAI for LangChain
OPENAI_API_KEY=your_openai_api_key

# Security
JWT_SECRET=your_jwt_secret_key

# Deployment Configuration
DEPLOYMENT_MODE=production
ENABLE_MCP=true
ENABLE_LANGCHAIN=true
ENABLE_CONTROL_PLANE=true
ENABLE_MONITORING=true
FLASHBOOT_ENABLED=true
ENABLE_REDIS_CACHING=true
ENABLE_R2_BACKUP=true

# Integration Webhooks
WEBHOOK_URL=https://your-domain.com/webhook
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/h200
TEMPLATED_API_KEY=your_templated_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=h200-system@your-domain.com
EMAIL_TO=admin@your-domain.com,alerts@your-domain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
